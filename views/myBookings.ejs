<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/header') %>
  <body>
    <%- include('./partials/navbar') %>
    <div class="container m-5">
      <h1 class="text-center mt-4">My Bookings</h1>
      <table class="table table-striped table-bordered table-hover">
        <h3 class="text-center">Lands</h3>
        <thead>
          <tr>
            <th>Location</th>
            <th>Area</th>
            <th>Total Price</th>
            <th>Price Per Square Meter</th>
          </tr>
        </thead>
        <tbody>
          <% if(myLands.length>0){ %> <% myLands.forEach(item=>{ %>
          <tr>
            <td><%= item.location%></td>
            <td><%= item.area%></td>
            <td><%= item.totalPrice%></td>
            <td><%= item.pricePerSquareMeter%></td>
          </tr>
          <%})%> <% }else{ %>
          <td>No Lands to show</td>
          <%}%>
        </tbody>
      </table>

      <table class="table table-striped table-bordered table-hover">
        <h3 class="text-center">Apartments</h3>
        <thead>
          <tr>
            <th>Apartment Number</th>
            <th>Apartment Type</th>
            <th>Apartment Level</th>
            <th>Bed Rooms</th>
          </tr>
        </thead>
        <tbody>
          <% if(myApartments.length>0){ %> <% myApartments.forEach(item=>{ %>
          <tr>
            <td><%= item.apartment_number%></td>
            <td><%= item.apartment_type%></td>
            <td><%= item.apartment_level%></td>
            <td><%= item.bed_rooms%></td>
          </tr>
          <%})%> <% }else{ %>
          <td>No Apartments to show</td>
          <%}%>
        </tbody>
      </table>

      <table class="table table-striped table-bordered table-hover">
        <h3 class="text-center">Villas</h3>
        <thead>
          <tr>
            <th>Villa Number</th>
            <th>Villa Door</th>
            <th>Stories</th>
            <th>Garage</th>
            <th>Servent Room</th>
          </tr>
        </thead>
        <tbody>
          <% if(myVillas.length>0){ %> <% myVillas.forEach(item=>{ %>
          <tr>
            <td><%= item.villa_number%></td>
            <td><%= item.villa_door_number%></td>
            <td><%= item.stories_number%></td>
            <td><%= item.garage%></td>
            <td><%= item.serventRoom%></td>
          </tr>
          <%})%> <% }else{ %>
          <td>No Villas to show</td>
          <%}%>
        </tbody>
      </table>
    </div>
    <!-- Bootstrap JS -->
    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
