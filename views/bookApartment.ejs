<!DOCTYPE html>
<html>
  <%- include('./partials/header') %>
  <body>
    <!-- Navbar -->

    <%- include('./partials/navbar') %>

    <div class="container m-4">
      <h1 class="text-center m-3">Confirm Booking</h1>
      <div class="row">
        <div class="col-md-6">
          <img
            style="height: 500px; width: 400px"
            src="/uploads/<%= data.image%>"
            class="img-responsive"
          />
        </div>
        <div class="col-md-6">
          <form method="post" action="/api/bookings/apartment">
            <div class="form-group">
              <label for="location">Apartment Number:</label>
              <input
                readonly
                value="<%= data.apartment_number %>"
                type="text"
                class="form-control"
                id="location"
                name="apartment_number"
              />
            </div>
            <div class="form-group">
              <label for="area">Type:</label>
              <input
                readonly
                value="<%= data.apartment_type %>"
                type="text"
                class="form-control"
                name="apartment_type"
                id="area"
              />
            </div>
            <div class="form-group">
              <label for="total-price">Apartment Level:</label>
              <input
                value="<%= data.apartment_level %>"
                readonly
                type="text"
                class="form-control"
                id="apartment_level"
                name="apartment_level"
              />
            </div>
            <div class="form-group">
              <label for="price-per-sq-m">Apartment Building:</label>
              <input
                readonly
                value="<%= data.apartment_building %>"
                type="text"
                class="form-control"
                id="price-per-sq-m"
                name="apartment_building"
              />
            </div>
            <div class="form-group">
              <label for="price-per-sq-m">Bed Rooms:</label>
              <input
                readonly
                value="<%= data.bed_rooms %>"
                type="text"
                class="form-control"
                id="price-per-sq-m"
                name="bed_rooms"
              />
            </div>
            <div class="form-group">
              <label for="price-per-sq-m">Owner Name:</label>
              <input
                readonly
                value="<%= data.owner_details.name %>"
                type="text"
                class="form-control"
                id="price-per-sq-m"
              />
            </div>
            <div class="form-group">
              <label for="price-per-sq-m">Owner Email:</label>
              <input
                readonly
                value="<%= data.owner_details.email %>"
                type="text"
                class="form-control"
                id="price-per-sq-m"
              />
            </div>
            <% if(ownProperty){%>
            <button class="btn btn-success" disabled>Own Property</button>
            <%} else {%>
            <button type="submit" class="btn btn-success">
              Confirm Booking
            </button>
            <%}%>
          </form>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
